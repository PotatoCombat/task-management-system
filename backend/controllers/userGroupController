function getUserGroups(req, res) {
  req.db.query('SELECT * FROM user_group', (err, results) => {
    if (err) {
      res.status(500).send('Error fetching user groups');
    } else {
      res.json(results);
    }
  });
};

function getUserGroupNames(req, res) {
  req.db.query('SELECT DISTINCT user_group_groupName FROM user_group', (err, results) => {
    if (err) {
      res.status(500).send('Error fetching user group names');
    } else {
      res.json(results.map(row => row.user_group_groupName));
    }
  });
};

